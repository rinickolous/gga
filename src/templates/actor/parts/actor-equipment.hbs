{{#unless item.data.other}}
<div class="equipped">{{#if item.data.equipped}}âœ“{{/if}}</div>
{{/unless}}
<div class="qty">{{item.data.quantity}}</div>
<div class="item desc" style="padding-left: {{item.indent}}.2em;" data-item-id="{{#if section.editableName}}{{iid}}{{else}}{{item._id}}{{/if}}"{{#unless this.data.enabled}} disabled{{/unless}}>
    {{#if item.data.children}}
    {{#if item.data.open}}
    <i class="fas fa-caret-down expandcollapseicon"></i>
    {{else}}
    <i class="fas fa-caret-right expandcollapseicon"></i>
    {{/if}}
    {{/if}}
    {{item.name}}
    {{#if item.data.notes}}<div class="list_note">{{item.data.notes}}</div>{{/if}}
</div>
<div class="cost">{{item.data.value}}</div>
<div class="weight">{{item.data.weight}}</div>
<div class="sum_cost">{{item.data.value_total}}</div>
<div class="sum_weight">{{item.data.weight_total}}</div>
<div class="ref">{{item.data.reference}}</div>
{{#if (and item.data.children item.data.open)}}
    {{#each item.children as |item iid|}}
        {{> "systems/gga/templates/actor/parts/actor-equipment.hbs" item=item iid=iid}}
    {{/each}}
{{/if}}